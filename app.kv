BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.25
        Label:
            text: 'Sort by:'
        Spinner:
            id: sort_by
            text: "Alphabetical"
            values: ("Alphabetical", "Completion Status")
            on_text: app.sort_items(self.text)
        Label:
            text: 'Add New Movie...'
        Label:

            text: 'Title:'
        TextInput:
            id: added_title
            multiline: False
            write_tab: False
        Label:
            text: 'Category:'
        TextInput:
            id: added_category
            multiline: False
            write_tab: False
        Label:
            text: 'Year:'
        TextInput:
            id: added_year
            multiline: False
            write_tab: False
        Button:
            text: 'Add Movie'
            on_release: app.press_add_movie()
        Button:
            text: 'Clear'
            on_release: app.clear_bottom_status_text()
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: app.top_status_text
            size_hint_y:0.1
        BoxLayout:
            # this layout is populated with (button) widgets in app code
            id: entries_box
            orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'vertical'
            Label:
                text: app.bottom_status_text
